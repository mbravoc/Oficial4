@model IEnumerable<Oficial3.Models.Pecas>
@{
    ViewBag.Title = "IndexAjaxCatalogo";
}

<h2>IndexAjaxCatalogo</h2>


@foreach (var item in Model)
{
    <tr>
        <td>@item.nome_Pecas</td>
        <td><a href="#" data-toggle="popover" data-trigger="hover" id="@item.nome_Pecas">@item.preco_Pecas</a></td>
    </tr>
}

<script src="~/Scripts/jquery-3.3.1.min.js"></script>

<script>
    $(document).ready(function () {
        $('[data-toggle="popover"]').popover({
            title: setData,
            html: true,
            placement:'right'
        });
        function setData(id) {
            var set_data = '';
            var element = $(this);
            var id = element.attr("id");
            $.ajax({
                url: "?id" + id,
                method: "post",
                async: false,
                data: { id: id },
                success: function (data) {
                    set_data = data;
                }
            });
            return set_data;
        }
    });

</script>
